$bg = #272B34;
$light-bg = #383C47;
$deep-bg = #1B1E24;
$font-color = #e1e1e1;
$dark-blue = #3F92FB;

html.night {
  body {
    background: $light-bg;
  }

  .underline {
    &:before {
      opacity: .6;
      background: rgba(255, 255, 255, .3);
    }
  }

  *::selection {
    background: rgba(0, 0, 0, .3);
  }

  .some-link {
    a.btn {
      background: inherit;
      box-shadow: 0 0 4px $font-color;

      &:hover {
        background: inherit;
        box-shadow: 0 0 8px #fff;
      }
    }
  }

  header {
    background: $bg;

    .head-link {

      background: rgba(39, 43, 52, .6);

      &.fix {
        color: $font-color;
        box-shadow: 0 2px 4px rgba(0, 0, 0, .8);

        .btn .iconfont {
          color: #fff;
        }
      }

      a.btn {
        color: $font-color;

        &:hover {
          color: #fff;
          background: rgba(0, 0, 0, .1);

          .iconfont {
            color: #fff;
          }
        }

        &.is-active {
          background: rgba(0, 0, 0, .3);

          .iconfont {
            color: #fff;
          }
        }
      }
    }
  }

  #index-content {
    &:before {
      background-color: $bg;
    }

    .article {
      &.year {
        span.year {
          color: $font-color;
          background: $light-bg;
        }
      }

      .time {
        &:after {
          right: -6px;
          top: 13px;
          background: #666;
          border: 4px solid $bg;
        }
      }

      .title {
        color: $dark-blue;
      }

      .category-name {
        color: $font-color;
        background: $bg;
        opacity: .4;

        &.work {
          color: #9BDBFD;
        }

        &.life {
          color: #FD9927;
        }

        &.study {
          color: #B5CEA8;
        }

        &:hover {
          opacity: .5;
          box-shadow: 0 0 6px $font-color;
        }
      }
    }
  }

  #nav-bar div.toc {
    border-right: 2px solid $bg;
  }

  #content-main {

    a:link,
    a:visited {
      color: $dark-blue;
    }

    .list-item {
      background: $light-bg;
    }

    .markdown-body {
      color: $font-color;

      tr {
        background: inherit;
        td, th {
          background-color: $bg;
          border-color: rgba(255, 255, 255, .5);
        }
      }

      img {
        opacity: .8;
      }

      code {
        color: #FD9927;
        background: #444;
      }

      blockquote {
        color: #b6b6b6;
        border-left: .25em solid #c3c3c3;
      }

      .highlight {

        &.shell {
          background: initial;
        }

        .name {
          color: #559AD4;
        }

        .attr,
        .literal,
        .keyword,
        .params {
          color: #9BDBFD;
        }

        .string, .selector-tag, .attribute {
          color: #CA8E76;
        }

        .title,
        .built_in {
          color: #DBDBA9;
        }

        .comment {
          color: #669352;
        }

        .number,
        .bullet {
          color: #B5CEA8;
        }

        .section {
          color: rgb(62, 156, 214);
        }

        pre {
          background: rgba(0, 0, 0, 1);
        }

        .gutter {
          background: rgba(0, 0, 0, 1);
        }

        .code pre {
          min-width: 580px;

        }

        table {
          border-radius: 2px;
          background: rgba(0, 0, 0, 0);

          tr {
            background: #333;
          }
        }
      }
    }
  }

  .alert,
  .warn,
  .error {
    opacity: .8;
    color: black;
  }

  .win {
    ::-webkit-scrollbar-track-piece {
      background-color: $light-bg;
    }

    ::-webkit-scrollbar {
      width: 6px;
    }

    ::-webkit-scrollbar-thumb {
      background-color: rgba(0, 0, 0, .4);
      border: none;

      &:hover {
        background-color: rgba(0, 0, 0, .6);
      }
    }
  }
}

@media screen and (max-width: 560px) {
  .night {
    header {
      .head-link {
        position: absolute;
        left: -80vw;
        transition: left 0.2s ease-in, opacity 0.2s linear;

        &:before {
          background: linear-gradient(135deg, $deep-bg 25%,
          $light-bg 0, $light-bg 50%,
          $deep-bg 0, $deep-bg 75%,
          $light-bg 0);
        }

        a.btn .iconfont {
          color: $font-color;
        }
      }

      .toolbar {
        &.fix {
          background: $bg;
          box-shadow: 0 2px 4px rgba(0, 0, 0, .8);
        }
      }
    }

    main .more {
      background: rgba(255, 255, 255, .1);
    }
  }
}